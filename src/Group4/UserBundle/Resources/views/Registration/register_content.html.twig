{% trans_default_domain 'FOSUserBundle' %}

<div class="row" style="margin-top:20px">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
        <form role="form" class="form-signin" action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
            <h2>Register</h2>
            <hr class="colorgraph">
            {{ form_widget(form.email, { 'attr': { 'placeholder':'form.email'|trans}}) }}
            {{ form_widget(form.username, { 'attr': {'placeholder':'form.username'|trans}}) }}
            {% for passwordField in form.plainPassword %}
                {{ form_widget(passwordField, { 'attr': {'placeholder':'form.password'|trans}}) }}
            {% endfor %}
            <hr class="colorgraph">
            <div>
                <input type="submit" class="btn btn-lg btn-primary btn-block btn-success" value="{{ 'registration.submit'|trans }}" />
            </div>
        </form>
    </div>
</div>